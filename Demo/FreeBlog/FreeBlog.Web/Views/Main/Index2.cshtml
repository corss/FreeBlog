        // 页面切换
        $(document).on('click', '#menu a', function () {
            var thisPage = $(this).attr("data-url");
            if (typeof (thisPage) != "undefined") {
                if ($('.layui-body iframe').attr('src') == thisPage) return;
                $('.layui-body iframe').attr('src', thisPage)
